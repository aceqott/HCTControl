<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="?attr/nav_drawer_bg_color"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/toolbar_default"
        android:id="@+id/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RelativeLayout"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_below="@id/toolbar"
        android:background="?attr/nav_drawer_bg_color" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\tDesde aquí podrás enviar un correo a HCTeam para cualquier tipo de información o pregunta respecto a HCT Control. Solo hará falta rellenar los campos *Asunto y *Mensaje y al pulsar en *ENVIAR automáticamente abrirá tu correo prederteminado con los campos ya cubiertos y listos para enviar."
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textSize="12dp" />
        <RelativeLayout android:id="@+id/LinearLayout03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textView3">
            <TextView android:text="Asunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtForSubject"
                android:layout_marginTop="15dp"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:width="170dip"
                android:id="@+id/etSubject"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="15dp"
                android:elevation="5dp"
                android:translationZ="3dp"
                android:background="?attr/text_mail">
            </EditText>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/LinearLayout04"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/LinearLayout03">
            <TextView android:text="Mensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtForBody"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:textStyle="bold"></TextView>
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="8"
                android:id="@+id/etBody"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="false"
                android:singleLine="false"
                android:elevation="5dp"
                android:translationZ="3dp"
                android:background="?attr/text_mail">
            </EditText>
        </RelativeLayout>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSend"
            android:text="Enviar"
            android:imeOptions="actionSend"
            android:width="150dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="?attr/colorAccent"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:elevation="5dp"
            android:translationZ="3dp"
            android:layout_below="@+id/LinearLayout04">
        </Button>

    </RelativeLayout>
</RelativeLayout>